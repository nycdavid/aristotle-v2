.edit-my-account
  .content-panel.col-md-3.edit-my-account__user-profile.user-profile
    = image_tag gravatar_image_url(size: 120), class: "user-profile__gravatar"
    %h4= display_name
    %p= current_user.email
    
  .content-panel.col-md-4
    .form{ rel: 'edit' }
      = form_for @user do |f|
        %div.form__field
          = f.label :email, 'Email', class: "form__label"
          = f.text_field :email, placeholder: 'new@youremail.com', class: "form__input"
        %div.form__field
          = f.label :password, "Password", class: "form__label"
          = link_to "Change my Password", change_password_user_path, class: "btn btn-sm btn-clear branding-controls__control branding-controls__control--small"
        %div.form__field
          = f.label :first_name, 'First Name', class: "form__label"
          = f.text_field :first_name, placeholder: 'John', class: "form__input"
        %div.form__field
          = f.label :last_name, 'Last Name', class: "form__label"
          = f.text_field :last_name, placeholder: 'Doe', class: "form__input"
        %div.form__field
          = f.label :timezone, 'Region', class: "form__label"
          = f.select :timezone, ActiveSupport::TimeZone::MAPPING, {}, class: 'form__timezones-select'
        %div.form__field
          %label.form__label
          = f.submit 'Save', class: "btn btn-md btn-clear branding-controls__control"
