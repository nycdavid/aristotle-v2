.module{ rel: 'signup' }
  = form_for @user do |f|
    .form-group
      = f.label :email, 'Email'
      = f.text_field :email, placeholder: 'someone@somewhere.com'
    .form-group
      = f.label :first_name, 'First Name'
      = f.text_field :first_name, placeholder: 'John'
    .form-group
      = f.label :last_name, 'Last Name'
      = f.text_field :last_name, placeholder: 'Doe'
    .form-group
      = f.label :password, 'Password'
      = f.password_field :password, placeholder: 'Don\'t make it "password"...'
    .form-group
      = f.label :password_confirmation, 'Password Confirmation'
      = f.password_field :password_confirmation, placeholder: 'Seriously, not a good idea...'
    .form-group
      = f.label :timezone, 'Timezone'
      = f.select :timezone, ActiveSupport::TimeZone::MAPPING, class: 'timezones'
    .form-group
      = f.submit 'Sign Up'
