= link_to 'New Pursuit', new_user_pursuit_path
%table
  %thead
    %tr 
      %th Name
      %th Default Pomodoro Length
      %th Cumulative Time
  %tbody
    - @pursuits.each do |pursuit|
      %tr.pursuit{ :'data-pursuit-id' => pursuit.id, :'data-pursuit-name' => pursuit.name }
        %td= pursuit.name
        %td.default-pomodoro-length= convert_total_seconds_of(pursuit.default_pomodoro_length)
        %td.cumulative-time= convert_total_seconds_of(pursuit.cumulative_time)
